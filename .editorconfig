root = true

[*]
charset = utf-8
end_of_line = crlf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json}]
quote_type = single

[*.{css,scss,less}]
quote_type = double

[*.{ejs,html}]
quote_type = double

[*.md]
trim_trailing_whitespace = false 