<%- include('include/_header') %> <%- include('include/_stuNavBar') %>

<main class="container mx-auto px-4 py-8 flex-grow">
  <h1 class="text-4xl font-bold text-primary-dark mb-8 text-center">Student Resources</h1>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
    <!-- Find a Tutor Section -->
    <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all">
      <h2 class="text-2xl font-bold text-orange-600 mb-4">Find a Tutor</h2>
      <div class="mb-4">
        <label for="subject" class="block text-gray-700 font-medium mb-2">Subject</label>
        <select
          id="subject"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
        >
          <!-- Options will be populated by JS -->
        </select>
      </div>
      <div class="mb-4">
        <label for="class" class="block text-gray-700 font-medium mb-2">Class</label>
        <select
          id="class"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
        >
          <!-- Options will be populated by JS -->
        </select>
      </div>
      <button
        id="searchTutors"
        class="w-full bg-orange-500 text-white py-2 px-4 rounded-lg hover:bg-orange-600 transition-colors font-medium"
      >
        Find Available Tutors
      </button>
      <div id="tutorResults" class="mt-4">
        <!-- Tutor results will be displayed here -->
      </div>
    </div>

    <!-- Request Tutoring Section -->
    <div class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all">
      <h2 class="text-2xl font-bold text-orange-600 mb-4">Request Tutoring</h2>
      <form id="tutoringRequestForm">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label for="requestSubject" class="block text-gray-700 font-medium mb-2">Subject</label>
            <select
              id="requestSubject"
              name="subject"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
              required
            >
              <!-- Options will be populated by JS -->
            </select>
          </div>
          <div>
            <label for="requestClass" class="block text-gray-700 font-medium mb-2">Class</label>
            <select
              id="requestClass"
              name="class"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
              required
            >
              <!-- Options will be populated by JS -->
            </select>
          </div>
          <div>
            <label for="requestTopic" class="block text-gray-700 font-medium mb-2"
              >Topic/Assignment</label
            >
            <input
              type="text"
              id="requestTopic"
              name="topic"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
              required
            />
          </div>
          <div>
            <label for="preferredDate" class="block text-gray-700 font-medium mb-2"
              >Preferred Date</label
            >
            <input
              type="date"
              id="preferredDate"
              name="preferredDate"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
              required
            />
          </div>
          <div>
            <label for="lunchPeriod" class="block text-gray-700 font-medium mb-2"
              >Lunch Period</label
            >
            <select
              id="lunchPeriod"
              name="lunchPeriod"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500"
              required
            >
              <option value="">Select a lunch period</option>
              <option value="4">4</option>
              <option value="5">5</option>
              <option value="6">6</option>
            </select>
          </div>
          <div>
            <label for="additionalNotes" class="block text-gray-700 font-medium mb-2"
              >Additional Notes</label
            >
            <textarea
              id="additionalNotes"
              name="additionalNotes"
              class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 min-h-[100px]"
            ></textarea>
          </div>
        </div>
        <div class="mt-6">
          <button
            type="submit"
            class="w-full bg-orange-500 text-white py-2 px-4 rounded-lg hover:bg-orange-600 transition-colors font-medium"
          >
            Submit Request
          </button>
        </div>
      </form>
    </div>
  </div>
</main>

<script src="/js/stuHome.js"></script>

<%- include('include/_footer') %> <%- include('include/_end') %>
