<%- include('include/_header') %>
<%- include('include/_adminNavBar') %>

<main class="container mx-auto px-4 py-8 flex-grow">
  <h1 class="text-4xl font-bold mb-8 text-center text-white">User Role Management</h1>

  <div class="bg-white bg-opacity-95 rounded-lg shadow-lg p-6 w-full mb-6">
    <!-- Search and Filter -->
    <div class="mb-6 flex flex-wrap gap-4">
      <div class="flex-1 min-w-64">
        <label for="searchInput" class="block text-gray-700 font-medium mb-2">Search Users</label>
        <input
          type="text"
          id="searchInput"
          placeholder="Search by name or email..."
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </div>
      <div class="w-48">
        <label for="roleFilter" class="block text-gray-700 font-medium mb-2">Filter by Role</label>
        <select
          id="roleFilter"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
          <option value="">All Roles</option>
          <option value="student">Student</option>
          <option value="tutor">Tutor</option>
          <option value="lead">Lead</option>
          <option value="teacher">Teacher</option>
          <option value="admin">Admin</option>
          <option value="developer">Developer</option>
        </select>
      </div>
    </div>

    <!-- Users Table -->
    <div class="overflow-x-auto">
      <table class="w-full table-auto">
        <thead class="bg-blue-600 text-white">
          <tr>
            <th class="px-4 py-3 text-left">Name</th>
            <th class="px-4 py-3 text-left">Email</th>
            <th class="px-4 py-3 text-left">Current Role</th>
            <th class="px-4 py-3 text-left">Status</th>
            <th class="px-4 py-3 text-center">Actions</th>
          </tr>
        </thead>
        <tbody id="usersTableBody">
          <% if (tutors && tutors.length > 0) { %>
            <% tutors.forEach((tutor, index) => { %>
              <tr class="<%= index % 2 === 0 ? 'bg-blue-50' : 'bg-blue-100' %> hover:bg-orange-100 transition-colors" data-id="<%= tutor._id %>" data-email="<%= tutor.email %>">
                <td class="px-4 py-3 font-medium"><%= tutor.tutorFirstName %> <%= tutor.tutorLastName %></td>
                <td class="px-4 py-3 text-gray-600"><%= tutor.email %></td>
                <td class="px-4 py-3">
                  <span class="role-badge px-2 py-1 rounded text-sm font-medium <%= 
                    tutor.role === 'developer' ? 'bg-purple-200 text-purple-800' :
                    tutor.role === 'admin' ? 'bg-red-200 text-red-800' :
                    tutor.role === 'teacher' ? 'bg-green-200 text-green-800' :
                    tutor.role === 'lead' ? 'bg-yellow-200 text-yellow-800' :
                    tutor.role === 'tutor' ? 'bg-blue-200 text-blue-800' :
                    'bg-gray-200 text-gray-800'
                  %>">
                    <%= tutor.role || 'tutor' %>
                  </span>
                </td>
                <td class="px-4 py-3">
                  <span class="<%= tutor.isActive !== false ? 'text-green-600' : 'text-red-600' %>">
                    <%= tutor.isActive !== false ? '✓ Active' : '✗ Inactive' %>
                  </span>
                </td>
                <td class="px-4 py-3 text-center">
                  <select 
                    class="role-select px-2 py-1 border rounded focus:outline-none focus:ring-2 focus:ring-blue-500"
                    data-id="<%= tutor._id %>"
                    data-original="<%= tutor.role || 'tutor' %>"
                    <%= tutor.role === 'developer' ? 'disabled' : '' %>
                  >
                    <option value="student" <%= (tutor.role || 'tutor') === 'student' ? 'selected' : '' %>>Student</option>
                    <option value="tutor" <%= (tutor.role || 'tutor') === 'tutor' ? 'selected' : '' %>>Tutor</option>
                    <option value="lead" <%= tutor.role === 'lead' ? 'selected' : '' %>>Lead</option>
                    <option value="teacher" <%= tutor.role === 'teacher' ? 'selected' : '' %>>Teacher</option>
                    <option value="admin" <%= tutor.role === 'admin' ? 'selected' : '' %>>Admin</option>
                    <% if (user.role === 'developer') { %>
                      <option value="developer" <%= tutor.role === 'developer' ? 'selected' : '' %>>Developer</option>
                    <% } %>
                  </select>
                  <button 
                    class="save-role-btn ml-2 px-3 py-1 bg-green-500 hover:bg-green-600 text-white rounded text-sm hidden"
                    data-id="<%= tutor._id %>"
                  >
                    Save
                  </button>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="5" class="px-4 py-8 text-center text-gray-500">No users found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>

  <!-- Teachers Section -->
  <div class="bg-white bg-opacity-95 rounded-lg shadow-lg p-6 w-full">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">Teachers</h2>
    <div class="overflow-x-auto">
      <table class="w-full table-auto">
        <thead class="bg-green-600 text-white">
          <tr>
            <th class="px-4 py-3 text-left">Name</th>
            <th class="px-4 py-3 text-left">Email</th>
            <th class="px-4 py-3 text-left">Admin Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (teachers && teachers.length > 0) { %>
            <% teachers.forEach((teacher, index) => { %>
              <tr class="<%= index % 2 === 0 ? 'bg-green-50' : 'bg-green-100' %> hover:bg-orange-100 transition-colors">
                <td class="px-4 py-3 font-medium"><%= teacher.teacherFirstName %> <%= teacher.teacherLastName %></td>
                <td class="px-4 py-3 text-gray-600"><%= teacher.email %></td>
                <td class="px-4 py-3">
                  <span class="<%= teacher.admin ? 'text-red-600 font-bold' : 'text-gray-600' %>">
                    <%= teacher.admin ? '★ Admin' : 'Teacher' %>
                  </span>
                </td>
              </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="3" class="px-4 py-8 text-center text-gray-500">No teachers found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<script>
  // Search functionality
  document.getElementById('searchInput').addEventListener('input', filterUsers);
  document.getElementById('roleFilter').addEventListener('change', filterUsers);

  function filterUsers() {
    const searchTerm = document.getElementById('searchInput').value.toLowerCase();
    const roleFilter = document.getElementById('roleFilter').value;
    const rows = document.querySelectorAll('#usersTableBody tr[data-id]');

    rows.forEach(row => {
      const name = row.querySelector('td:first-child').textContent.toLowerCase();
      const email = row.dataset.email.toLowerCase();
      const role = row.querySelector('.role-badge').textContent.trim().toLowerCase();

      const matchesSearch = name.includes(searchTerm) || email.includes(searchTerm);
      const matchesRole = !roleFilter || role === roleFilter;

      row.style.display = matchesSearch && matchesRole ? '' : 'none';
    });
  }

  // Role change handling
  document.querySelectorAll('.role-select').forEach(select => {
    select.addEventListener('change', function() {
      const saveBtn = this.parentElement.querySelector('.save-role-btn');
      const original = this.dataset.original;
      
      if (this.value !== original) {
        saveBtn.classList.remove('hidden');
      } else {
        saveBtn.classList.add('hidden');
      }
    });
  });

  // Save role button handling
  document.querySelectorAll('.save-role-btn').forEach(btn => {
    btn.addEventListener('click', async function() {
      const id = this.dataset.id;
      const select = this.parentElement.querySelector('.role-select');
      const newRole = select.value;

      try {
        const response = await fetch(`/api/admin/users/${id}/role`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ role: newRole })
        });

        const data = await response.json();

        if (data.success) {
          // Update the UI
          select.dataset.original = newRole;
          this.classList.add('hidden');
          
          // Update badge
          const badge = this.closest('tr').querySelector('.role-badge');
          badge.textContent = newRole;
          badge.className = 'role-badge px-2 py-1 rounded text-sm font-medium ' + 
            (newRole === 'developer' ? 'bg-purple-200 text-purple-800' :
             newRole === 'admin' ? 'bg-red-200 text-red-800' :
             newRole === 'teacher' ? 'bg-green-200 text-green-800' :
             newRole === 'lead' ? 'bg-yellow-200 text-yellow-800' :
             newRole === 'tutor' ? 'bg-blue-200 text-blue-800' :
             'bg-gray-200 text-gray-800');

          alert('Role updated successfully!');
        } else {
          alert('Error: ' + (data.error || 'Failed to update role'));
        }
      } catch (error) {
        console.error('Error updating role:', error);
        alert('Error updating role. Please try again.');
      }
    });
  });
</script>

<%- include('include/_footer') %>
<%- include('include/_end') %>
