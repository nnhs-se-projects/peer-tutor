<!-- include header -->
<%- include('include/_header') %> <%- include('include/_adminNavBar') %>
<!-- /include header -->

<main class="container mx-auto px-4 py-8 flex-grow">
  <h1 class="text-4xl font-bold text-primary-dark mb-8 text-center">Admin Attendance</h1>

  <!-- Main Content with Selection and Display -->
  <div class="flex flex-col lg:flex-row gap-8 mx-auto" style="max-width: 1200px">
    <!-- Left Side: Selection Menus -->
    <div
      class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all lg:w-1/3"
      style="min-width: 300px"
    >
      <h2 class="text-2xl font-bold text-orange-600 mb-6">Select Filters</h2>

      <!-- Date Selection -->
      <div class="mb-6">
        <label for="attendanceDate" class="block text-gray-700 font-semibold mb-2">
          Select Date
        </label>
        <input
          type="date"
          id="attendanceDate"
          name="attendanceDate"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
        />
      </div>

      <!-- Lunch Period Selection -->
      <div class="mb-6">
        <label for="lunchPeriod" class="block text-gray-700 font-semibold mb-2">
          Select Lunch Period
        </label>
        <select
          id="lunchPeriod"
          name="lunchPeriod"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-orange-500 focus:border-transparent"
        >
          <option value="">Select a period</option>
          <option value="4">Period 4</option>
          <option value="5">Period 5</option>
          <option value="6">Period 6</option>
        </select>
      </div>

      <!-- Search Button -->
      <button
        id="searchAttendance"
        class="w-full bg-orange-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-orange-600 transition-colors"
      >
        Search Attendance
      </button>
    </div>

    <!-- Right Side: Attendance Display -->
    <div
      class="bg-white rounded-lg shadow-lg p-6 hover:shadow-xl transition-all lg:w-2/3 flex-grow"
    >
      <h2 class="text-2xl font-bold text-orange-600 mb-4">Attendance Records</h2>
      <div id="attendanceDisplay" class="overflow-auto max-h-96">
        <div class="text-center text-gray-500 italic py-8">
          Select a date and lunch period to view attendance records.
        </div>
        <!-- Attendance records will be populated here -->
      </div>
    </div>
  </div>
</main>

<script src="/js/adminAttendance.js"></script>

<%- include('include/_footer') %> <%- include('include/_end') %>

