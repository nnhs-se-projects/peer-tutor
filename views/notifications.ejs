<%- include('include/_header') %> <%- include('include/_homepageNavBar') %>

<main class="container mx-auto px-4 py-12 flex-grow">
  <!-- Absence Notifications Section -->
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8 mb-8">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-6">Absence Notifications</h1>
    <p class="text-gray-700 mb-6">
      Send automated notifications to tutors with outstanding absences. Use the controls below to
      notify tutors who have missed sessions.
    </p>

    <div class="space-y-4">
      <div class="flex flex-wrap items-center gap-4 mb-4">
        <label class="flex items-center gap-2">
          <span class="text-sm font-semibold text-gray-800">Minimum absences:</span>
          <select
            id="absence-threshold"
            class="w-24 rounded border border-gray-300 px-2 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="1">1+</option>
            <option value="2" selected>2+</option>
            <option value="3">3+</option>
          </select>
        </label>
        <button
          id="load-absent-tutors"
          class="bg-gray-600 hover:bg-gray-700 text-white font-semibold py-2 px-4 rounded transition-colors"
        >
          Load Tutors
        </button>
        <button
          id="notify-all-absent"
          class="bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded transition-colors"
          disabled
        >
          Notify All Listed
        </button>
      </div>

      <div id="absent-tutors-list" class="border rounded-lg overflow-hidden">
        <table class="w-full text-sm">
          <thead class="bg-gray-100">
            <tr>
              <th class="px-4 py-2 text-left">Name</th>
              <th class="px-4 py-2 text-left">Email</th>
              <th class="px-4 py-2 text-center">Absences</th>
              <th class="px-4 py-2 text-center">Action</th>
            </tr>
          </thead>
          <tbody id="absent-tutors-body">
            <tr>
              <td colspan="4" class="px-4 py-8 text-center text-gray-500">
                Click "Load Tutors" to see tutors with absences
              </td>
            </tr>
          </tbody>
        </table>
      </div>

      <div id="absence-status" class="text-sm"></div>
    </div>
  </div>

  <!-- Manual Notification Section -->
  <div class="max-w-3xl mx-auto bg-white shadow-lg rounded-lg p-8">
    <h1 class="text-3xl font-bold text-center text-gray-900 mb-6">
      Send a Custom Notification Email
    </h1>
    <p class="text-gray-700 mb-6">
      This form allows you to send custom notifications to selected tutors. Use the filters to find
      specific tutors.
    </p>

    <div class="space-y-4">
      <label class="block space-y-3">
        <div class="flex flex-wrap items-center gap-3">
          <span class="text-sm font-semibold text-gray-800">Recipients (tutors)</span>
          <input
            id="notification-search"
            type="text"
            placeholder="Search by name"
            class="w-48 rounded border border-gray-300 px-3 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <input
            id="notification-class"
            type="text"
            placeholder="Filter by class (e.g., Calculus BC)"
            class="flex-1 min-w-[240px] rounded border border-gray-300 px-3 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
          />
          <select
            id="notification-period"
            class="w-32 rounded border border-gray-300 px-2 py-1 text-sm focus:outline-none focus:ring-2 focus:ring-blue-500"
          >
            <option value="">Any period</option>
            <option value="4">Period 4</option>
            <option value="5">Period 5</option>
            <option value="6">Period 6</option>
          </select>
        </div>
        <select
          id="notification-to"
          size="10"
          multiple
          class="w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500 overflow-y-auto"
        >
          <option value="" disabled selected>Loading tutor list...</option>
        </select>
        <p class="text-xs text-gray-500">
          Use search/filters, then select one or more tutors (Ctrl/Cmd+Click).
        </p>
      </label>

      <label class="block">
        <span class="text-sm font-semibold text-gray-800">Subject</span>
        <input
          id="notification-subject"
          type="text"
          value="Peer Tutoring Notification"
          class="mt-1 w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
      </label>

      <label class="block">
        <span class="text-sm font-semibold text-gray-800">Message</span>
        <textarea
          id="notification-message"
          rows="5"
          class="mt-1 w-full rounded border border-gray-300 px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500"
        >
Hello! This is a test notification from the peer tutoring app.</textarea
        >
      </label>

      <button
        id="send-notification"
        class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded transition-colors"
      >
        Send Email
      </button>

      <div id="notification-status" class="text-sm"></div>
    </div>
  </div>
</main>

<script src="/js/notifications.js"></script>
<%- include('include/_end') %>
