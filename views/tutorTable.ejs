<%- include('include/_header') %> <%- include('include/_teachNavBar') %>

<style>
  .blue-box {
    background-color: rgba(248, 250, 255, 0.95);
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    width: 100%;
    overflow-x: auto;
    margin-bottom: 30px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .bordered-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid #000;
    background-color: white;
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }
  
  .bordered-table thead th {
    background-color: #1976d2;
    color: white;
    padding: 16px;
    text-align: left;
    font-weight: 600;
    position: sticky;
    top: 0;
    z-index: 10;
    transition: background-color 0.2s;
    border-right: 1px solid #000;
    border-bottom: 2px solid #000;
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }
  
  .bordered-table thead th:last-child {
    border-right: none;
  }
  
  .bordered-table tbody tr {
    transition: all 0.2s;
    background-color: white;
  }
  
  .bordered-table tbody tr:nth-child(odd) {
    background-color: #f0f4fa;
  }
  
  .bordered-table tbody tr:hover {
    background-color: #e0ecf9;
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .bordered-table td {
    padding: 14px 16px;
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
    color: #000;
    background-color: inherit;
    font-weight: 500;
    font-family: ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", sans-serif;
  }
  
  .bordered-table td:last-child {
    border-right: none;
  }
  
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .sort-icon, .search-icon {
    cursor: pointer;
    transition: all 0.2s;
    padding: 4px;
    border-radius: 4px;
  }
  
  .sort-icon:hover, .search-icon:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(1.2);
  }
  
  .search-input {
    margin-top: 8px;
    padding: 8px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    transition: all 0.3s;
  }
  
  .search-input:focus {
    border-color: #ff8800;
    box-shadow: 0 0 0 3px rgba(255, 136, 0, 0.2);
    outline: none;
  }
  
  .export-btn {
    background-color: #1976d2;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
    margin-bottom: 20px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }
  
  .export-btn:hover {
    background-color: #0d47a1;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }
  
  .export-btn:active {
    transform: translateY(0);
  }
  
  .export-icon {
    font-size: 18px;
  }
  
  @media (max-width: 768px) {
    .blue-box {
      padding: 16px;
      border-radius: 12px;
    }
    
    .bordered-table td, .bordered-table th {
      padding: 12px;
    }
  }
  
  /* Animation keyframes */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<!-- Main Site -->
<main class="container mx-auto px-4 py-8 flex-grow">
  <div class="container mx-auto px-4" style="max-width: 1400px;">
    <h1 class="text-4xl font-bold mb-8 text-center text-white">
      Tutor Database Table
    </h1>
    
    <div class="flex justify-end mb-4">
      <button id="exportBtn" class="export-btn">
        <span class="export-icon">üì•</span> Export to Text File
      </button>
    </div>
    
    <div class="blue-box">
      <table id="tutorTable" class="bordered-table">
        <thead>
          <tr>
            <% const headers = ['Tutor Name', 'Tutor Grade', 'Tutor ID', 'Email',
            'Classes', 'Days', 'Lunch', 'Total Sessions', 'Actions']; %> <%
            headers.forEach((header, index) => { %>
            <th>
              <div class="header-container">
                <span class="header-text" id="headerText<%= index %>">
                  <%= header %>
                </span>
                <% const headers = ['Tutor Name', 'Tutor Grade', 'Tutor ID', 'Email',
                'Classes', 'Days', 'Lunch', 'Total Sessions', 'Actions']; %> <%
                    class="sort-icon"
                    id="sortIcon<%= index %>"
                    data-index="<%= index %>"
                  >‚Üë‚Üì</span>
                  <span class="search-icon" data-index="<%= index %>"
                  >üîç</span>
                </div>
              </div>
              <input
                type="text"
                class="search-input"
                id="searchInput<%= index %>"
                placeholder="Search <%= header %>"
                data-index="<%= index %>"
                style="display: none; width: 100%"
              />
            </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% tutors.forEach(tutor => { %>
          <tr data-id="<%= tutor.id %>">
            <td><%= tutor.tutorName %></td>
            <td><%= tutor.grade %></td>
            <td><%= tutor.tutorID %></td>
            <td><%= tutor.email %></td>
            <td><%= tutor.classes.join(', ') %></td>
            <td>
              <% tutors.forEach(tutor => { %>
              <tr
                data-id="<%= tutor.id %>"
                data-first-name="<%= tutor.firstName %>"
                data-last-name="<%= tutor.lastName %>"
                data-grade="<%= tutor.grade %>"
                data-tutor-id="<%= tutor.tutorID %>"
                data-email="<%= tutor.email %>"
                data-classes="<%= tutor.classes.join(', ') %>"
                data-days="<%= tutor.daysAvailable ? tutor.daysAvailable.join(', ') : '' %>"
                data-lunch="<%= tutor.lunchPeriod %>"
                data-returning="<%= tutor.returning %>"
                data-leader="<%= tutor.tutorLeader %>"
                data-attendance="<%= tutor.attendance %>"
              >
                <td><%= tutor.tutorName %></td>
                <td><%= tutor.grade %></td>
                <td><%= tutor.tutorID %></td>
                <td><%= tutor.email %></td>
                <td><%= tutor.classes.join(', ') %></td>
                <td>
                  <%= tutor.daysAvailable ? tutor.daysAvailable.join(', ') : '' %>
                </td>
                <td><%= tutor.lunchPeriod %></td>
                <td><%= tutor.totalSessions %></td>
                <td class="space-x-2 whitespace-nowrap">
                  <button
                    class="edit-tutor bg-indigo-600 hover:bg-indigo-700 text-white px-3 py-1 rounded shadow"
                    type="button"
                  >
                    Edit
                  </button>
                  <button
                    class="delete-tutor bg-red-600 hover:bg-red-700 text-white px-3 py-1 rounded shadow"
                    type="button"
                  >
                    Delete
                  </button>
                </td>
              </tr>
              <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</main>

    <!-- Edit Tutor Modal -->
    <div
      id="editModal"
      class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center hidden"
      aria-hidden="true"
    >
      <div class="bg-white rounded-lg shadow-xl w-full max-w-2xl p-6 space-y-4">
        <h2 class="text-2xl font-bold text-gray-900">Edit Tutor</h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <label class="block text-sm font-medium text-gray-700">
            First Name
            <input id="edit-first" type="text" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Last Name
            <input id="edit-last" type="text" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Tutor ID
            <input id="edit-tutorid" type="number" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Grade
            <input id="edit-grade" type="number" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Email
            <input id="edit-email" type="email" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Lunch Period
            <input id="edit-lunch" type="number" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Returning
            <select id="edit-returning" class="mt-1 w-full border rounded px-3 py-2">
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>
          </label>
          <label class="block text-sm font-medium text-gray-700">
            Tutor Leader
            <select id="edit-leader" class="mt-1 w-full border rounded px-3 py-2">
              <option value="true">Yes</option>
              <option value="false">No</option>
            </select>
          </label>
          <label class="block text-sm font-medium text-gray-700 md:col-span-2">
            Classes (comma separated)
            <input id="edit-classes" type="text" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700 md:col-span-2">
            Days Available (comma separated)
            <input id="edit-days" type="text" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
          <label class="block text-sm font-medium text-gray-700 md:col-span-2">
            Attendance
            <input id="edit-attendance" type="number" class="mt-1 w-full border rounded px-3 py-2" />
          </label>
        </div>
        <div class="flex justify-end gap-3 pt-2">
          <button id="edit-cancel" class="px-4 py-2 rounded border">Cancel</button>
          <button id="edit-save" class="px-4 py-2 rounded bg-blue-600 text-white">Save</button>
        </div>
        <input type="hidden" id="edit-id" />
      </div>
    </div>
<script src="/js/tutorTable.js"></script>

<%- include('include/_footer') %>
<%- include('include/_end') %>
