<!DOCTYPE html>
<html>
  <head>
    <title>Leaderboard</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #2c1a70;
        color: white;
      }

      .leaderboard {
        width: 350px;
        margin: 40px auto;
        background: #2c1a70;
        padding: 20px;
        border-radius: 10px;
      }

      .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        font-weight: bold;
        margin-bottom: 20px;
      }

      .entry {
        display: flex;
        align-items: center;
        margin-bottom: 15px;
      }

      .rank {
        width: 20px;
      }

      .name {
        flex: 1;
        margin-left: 10px;
      }

      .progress {
        flex: 2;
        height: 10px;
        background: #444;
        border-radius: 5px;
        overflow: hidden;
        margin: 0 10px;
      }

      .bar-green {
        background-color: #32cd32;
        height: 100%;
        float: left;
      }

      .bar-red {
        background-color: #ff4c4c;
        height: 100%;
        float: left;
      }

      .points {
        width: 50px;
        text-align: right;
      }
    </style>
  </head>
  <body>
    <div class="leaderboard">
      <div class="header">
        <div>Leaderboard</div>
        <div>Points â–¼</div>
      </div>
      <% leaderboard.forEach((player, index) => { %>
      <div class="entry">
        <div class="rank"><%= index + 1 %></div>
        <div class="name"><%= player.name %></div>
        <div class="progress">
          <div
            class="bar-green"
            style="width: <%= player.progressPercent %>%"
          ></div>
          <div
            class="bar-red"
            style="width: <%= 100 - player.progressPercent %>%"
          ></div>
        </div>
        <div class="points"><%= player.points %></div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
