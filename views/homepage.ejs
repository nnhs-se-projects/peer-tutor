<%- include('include/_header') %> <%- include('include/_homepageNavBar') %>

<!-- Leaderboard -->
<main>
  <h1 class="black-heading">Huskie Peer Tutoring Leaderboard</h1>
  <div class="blue-box">
    <div class="leaderboard">
      <table id="leaderboardTable" class="leaderboard-table">
        <thead>
          <tr>
            <% const headers = ['Rank', 'Name', 'Progress', 'Total Sessions'];
            %> <% headers.forEach((header, index) => { %>
            <th style="<%= header === 'Progress' ? 'width: 50%;' : '' %>">
              <div
                class="header-container"
                style="
                  display: flex;
                  justify-content: space-between;
                  align-items: center;
                "
              >
                <span class="header-text" id="headerText<%= index %>"
                  ><%= header %></span
                >
                <div class="icons" style="display: flex; gap: 5px">
                  <span
                    class="sort-icon"
                    id="sortIcon<%= index %>"
                    onclick="sortTable(<%= index %>)"
                    >‚Üë‚Üì</span
                  >
                  <span class="search-icon" onclick="toggleSearch(<%= index %>)"
                    >üîç</span
                  >
                </div>
              </div>
              <input
                type="text"
                class="search-input"
                id="searchInput<%= index %>"
                placeholder="Search <%= header %>"
                oninput="filterTable(<%= index %>)"
                style="display: none; width: 100%"
              />
            </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% tutors .sort((a, b) => b.totalSessions - a.totalSessions)
          .forEach((tutor, index) => { const progressPercent = Math.min(
          Math.round((tutor.totalSessions / 100) * 100), 100 ); %>
          <tr>
            <td><%= index + 1 %></td>
            <td><%= tutor.firstName %> <%= tutor.lastName %></td>
            <td>
              <div class="progress-bar">
                <div
                  class="bar-green"
                  style="width: <%= progressPercent %>%"
                ></div>
                <div
                  class="bar-red"
                  style="width: <%= 100 - progressPercent %>%"
                ></div>
              </div>
            </td>
            <td><%= tutor.totalSessions %></td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<!-- Footer and Scripts -->
<script src="/js/homepage.js"></script>
<link rel="stylesheet" href="/css/styles.css" />
<%- include('include/_footer') %>
