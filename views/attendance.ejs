<style>
  .blue-box {
    background-color: rgba(248, 250, 255, 0.95);
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    width: 100%;
    overflow-x: auto;
    margin-bottom: 30px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }
  
  .bordered-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid #000;
    background-color: white;
  }
  
  .bordered-table thead th {
    background-color: #1976d2;
    color: white;
    padding: 16px;
    text-align: left;
    font-weight: 600;
    position: sticky;
    top: 0;
    z-index: 10;
    transition: background-color 0.2s;
    border-right: 1px solid #000;
    border-bottom: 2px solid #000;
  }
  
  .bordered-table thead th:last-child {
    border-right: none;
  }
  
  .bordered-table tbody tr {
    transition: all 0.2s;
    background-color: white;
  }
  
  .bordered-table tbody tr:nth-child(odd) {
    background-color: #f0f4fa;
  }
  
  .bordered-table tbody tr:hover {
    background-color: #e0ecf9;
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }
  
  .bordered-table td {
    padding: 14px 16px;
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
    color: #000;
    background-color: inherit;
    font-weight: 500;
  }
  
  .bordered-table td:last-child {
    border-right: none;
  }
  
  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .sort-icon, .search-icon {
    cursor: pointer;
    transition: all 0.2s;
    padding: 4px;
    border-radius: 4px;
  }
  
  .sort-icon:hover, .search-icon:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(1.2);
  }
  
  .search-input {
    margin-top: 8px;
    padding: 8px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    transition: all 0.3s;
  }
  
  .search-input:focus {
    border-color: #ff8800;
    box-shadow: 0 0 0 3px rgba(255, 136, 0, 0.2);
    outline: none;
  }
  
  .absent-button, .present-button, .makeup-button {
    padding: 8px 12px;
    margin: 0 5px;
    border-radius: 6px;
    border: none;
    cursor: pointer;
    font-weight: bold;
    transition: all 0.2s;
  }
  
  .absent-button {
    background-color: #ff5252;
    color: white;
  }
  
  .present-button {
    background-color: #4caf50;
    color: white;
  }
  
  .makeup-button {
    background-color: #2196f3;
    color: white;
  }
  
  .absent-button:hover, .present-button:hover, .makeup-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .button-disabled {
    background-color: #cccccc !important;
    color: #666666 !important;
    cursor: pointer !important;
    opacity: 0.6;
  }

  .button-disabled:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    opacity: 0.8;
  }

  .button-selected {
    box-shadow: 0 0 0 3px rgba(0, 0, 0, 0.3) !important;
  }
  
  /* Ensure makeup button keeps blue color on hover/focus/active */
  .makeup-button:hover,
  .makeup-button:focus,
  .makeup-button:active {
    background-color: #2196f3 !important;
    color: white !important;
  }
  
  .filter-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 20px;
    background-color: #f0f8ff;
    padding: 15px;
    border-radius: 10px;
    box-shadow: 0 2px 5px rgba(0,0,0,0.1);
  }
  
  .date-display {
    font-size: 1.2rem;
    font-weight: bold;
    color: #1976d2;
  }
  
  .filter-dropdown {
    padding: 8px 12px;
    border-radius: 6px;
    border: 1px solid #ccc;
    background-color: white;
    font-size: 1rem;
    min-width: 150px;
  }
  
  /* Animation keyframes */
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Submit button for attendance page */
  .submit-attendance-container {
    display: flex;
    justify-content: flex-end;
    margin-top: 16px;
    margin-bottom: 8px;
  }

  .submit-attendance-button {
    background-color: #FF8800;
    color: #ffffff;
    font-size: 2rem;
    padding: 24px 40px;
    border-radius: 12px;
    border: none;
    font-weight: 700;
    cursor: pointer;
    box-shadow: 0 6px 14px rgba(255, 136, 0, 0.25);
    transition: transform 0.12s ease, box-shadow 0.12s ease;
  }

  .submit-attendance-button:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 20px rgba(255, 136, 0, 0.28);
  }

  /* Confirmation modal */
  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0,0,0,0.5);
    display: none;
    align-items: center;
    justify-content: center;
    z-index: 9999;
  }

  .modal-box {
    background: #fff;
    padding: 20px 24px;
    border-radius: 10px;
    max-width: 420px;
    width: 90%;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    text-align: center;
  }

  .modal-message {
    font-size: 1.1rem;
    margin-bottom: 18px;
    color: #111827;
  }

  .modal-buttons {
    display: flex;
    gap: 12px;
    justify-content: center;
  }

  .modal-btn {
    padding: 10px 18px;
    border-radius: 8px;
    border: none;
    cursor: pointer;
    font-weight: 700;
  }

  .modal-btn-cancel {
    background: #e5e7eb;
    color: #111827;
  }

  .modal-btn-ok {
    background: #FF8800;
    color: white;
  }
</style>

<!-- Main Site -->
<main class="container mx-auto px-4 py-8 flex-grow">
  <div class="container mx-auto px-4" style="max-width: 1400px;">
    <h1 class="text-4xl font-bold mb-8 text-center text-white">
      Tutor Attendance Tracker
    </h1>
    
    <div class="filter-controls">
      <div class="date-display" id="currentDate"></div>
      <div class="filter-section">
        <label for="lunchFilter" class="mr-2">Lunch Period:</label>
        <select id="lunchFilter" class="filter-dropdown">
          <option value="4">Period 4</option>
          <option value="5">Period 5</option>
          <option value="6">Period 6</option>
        </select>
      </div>
    </div>
    
    <div class="blue-box">
      <table id="studentTable" class="bordered-table">
        <thead>
          <tr>
            <% const headers = ['First Name', 'Last Name', 'Days Missed', 'Lunch Period', 'Days Available', 'Attendance']; %> 
            <% headers.forEach((header, index) => { %>
            <th>
              <div class="header-container">
                <span class="header-text" id="headerText<%= index %>"><%= header %></span>
                <% if (index < 5) { %>
                <div class="icons" style="display: flex; gap: 5px">
                  <span class="sort-icon" id="sortIcon<%= index %>" data-index="<%= index %>">‚Üë‚Üì</span>
                  <span class="search-icon" data-index="<%= index %>">üîç</span>
                </div>
                <% } %>
              </div>
              <% if (index < 5) { %>
              <input
                type="text"
                class="search-input"
                id="searchInput<%= index %>"
                placeholder="Search <%= header %>"
                data-index="<%= index %>"
                style="display: none; width: 100%"
              />
              <% } %>
            </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% if (tutors && tutors.length > 0) { %>
            <% tutors.forEach(tutor => { %>
            <tr
              data-lunch="<%= tutor.lunchPeriod %>"
              data-days="<%= tutor.daysAvailable ? tutor.daysAvailable.join(',') : '' %>"
              data-tutor-id="<%= tutor.tutorID %>"
              data-email="<%= tutor.email %>"
              data-first-name="<%= tutor.tutorFirstName || tutor.firstName || '' %>"
              data-last-name="<%= tutor.tutorLastName || tutor.lastName || '' %>"
              class="tutor-row"
            >
              <td><%= tutor.tutorFirstName || tutor.firstName || 'Unknown' %></td>
              <td><%= tutor.tutorLastName || tutor.lastName || 'Unknown' %></td>
              <td id="daysMissed-<%= tutor._id %>"><%= tutor.attendance || 0 %></td>
              <td class="lunch-period-cell"><%= tutor.lunchPeriod %></td>
              <td><%= tutor.daysAvailable ? tutor.daysAvailable.join(', ') : '' %></td>
              <td>
                <button class="absent-button" data-id="<%= tutor._id %>" data-action="absent">A</button>
                <button class="present-button" data-id="<%= tutor._id %>" data-action="present">P</button>
                <button class="makeup-button" data-id="<%= tutor._id %>" data-action="makeup">M</button>
              </td>
            </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="6" class="text-center py-4">No tutors found</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

