  <div class="container mx-auto px-4" style="max-width: 1400px;">
    <div class="submit-attendance-container">
      <button id="attendanceSubmitBtn" class="submit-attendance-button">Submit</button>
    </div>
  </div>

    <!-- Confirmation modal markup -->
    <div id="attendanceConfirmModal" class="modal-overlay" role="dialog" aria-modal="true" aria-hidden="true">
      <div class="modal-box">
        <div class="modal-message">Are you sure you want to submit?</div>
        <div class="modal-buttons">
          <button id="modalNoBtn" class="modal-btn modal-btn-cancel">No</button>
          <button id="modalOkBtn" class="modal-btn modal-btn-ok">Yes</button>
        </div>
      </div>
    </div>

    <script>
      // Show confirmation modal before redirecting to /leadHome
      document.addEventListener('DOMContentLoaded', function () {
        const btn = document.getElementById('attendanceSubmitBtn');
        const modal = document.getElementById('attendanceConfirmModal');
        const ok = document.getElementById('modalOkBtn');
        const no = document.getElementById('modalNoBtn');

        function showModal() {
          if (!modal) return;
          modal.style.display = 'flex';
          modal.setAttribute('aria-hidden', 'false');
        }

        function hideModal() {
          if (!modal) return;
          modal.style.display = 'none';
          modal.setAttribute('aria-hidden', 'true');
        }

        if (btn) {
          btn.addEventListener('click', function (e) {
            e.preventDefault();
            showModal();
          });
        }

        if (no) {
          no.addEventListener('click', function () {
            hideModal();
          });
        }

        if (ok) {
          ok.addEventListener('click', function () {
            if (window.buildAttendancePayload) {
              const payload = window.buildAttendancePayload();
              if (!payload) {
                console.warn('No attendance payload generated. Ensure a lunch is selected and all tutors are marked.');
              } else {
                if (window.sendAttendancePayload) {
                  window.sendAttendancePayload(payload);
                }
                console.log('Attendance submission payload:', payload);
              }
            }
            hideModal();
          });
        }

        // allow escape key to close modal
        document.addEventListener('keydown', function (ev) {
          if (ev.key === 'Escape') hideModal();
        });
      });
    </script>

