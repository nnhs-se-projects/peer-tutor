<%- include('include/_header') %> <%- include('include/_adminNavBar') %>

<style>
  .blue-box {
    background-color: rgba(248, 250, 255, 0.95);
    border-radius: 16px;
    padding: 24px;
    box-shadow: 0 6px 18px rgba(0, 0, 0, 0.2);
    transition: all 0.3s ease;
    width: 100%;
    overflow-x: auto;
    margin-bottom: 30px;
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .bordered-table {
    width: 100%;
    border-collapse: separate;
    border-spacing: 0;
    border-radius: 12px;
    overflow: hidden;
    border: 2px solid #000;
    background-color: white;
  }

  .bordered-table thead th {
    background-color: #e67e22;
    color: white;
    padding: 16px;
    text-align: left;
    font-weight: 600;
    position: sticky;
    top: 0;
    z-index: 10;
    transition: background-color 0.2s;
    border-right: 1px solid #000;
    border-bottom: 2px solid #000;
    white-space: nowrap;
  }

  .bordered-table thead th:last-child {
    border-right: none;
  }

  .bordered-table tbody tr {
    transition: all 0.2s;
    background-color: white;
  }

  .bordered-table tbody tr:nth-child(odd) {
    background-color: #fef5ec;
  }

  .bordered-table tbody tr:hover {
    background-color: #fde8d0;
    transform: translateY(-2px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .bordered-table td {
    padding: 14px 16px;
    border-bottom: 1px solid #000;
    border-right: 1px solid #000;
    color: #000;
    background-color: inherit;
    font-weight: 500;
  }

  .bordered-table td:last-child {
    border-right: none;
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .sort-icon, .search-icon {
    cursor: pointer;
    transition: all 0.2s;
    padding: 4px;
    border-radius: 4px;
  }

  .sort-icon:hover, .search-icon:hover {
    background-color: rgba(255, 255, 255, 0.2);
    transform: scale(1.2);
  }

  .search-input {
    margin-top: 8px;
    padding: 8px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    transition: all 0.3s;
  }

  .search-input:focus {
    border-color: #e67e22;
    box-shadow: 0 0 0 3px rgba(230, 126, 34, 0.2);
    outline: none;
  }

  .status-badge {
    display: inline-block;
    padding: 4px 12px;
    border-radius: 9999px;
    font-size: 0.85rem;
    font-weight: 600;
    text-transform: capitalize;
  }

  .status-pending {
    background-color: #fef3c7;
    color: #92400e;
  }

  .status-accepted {
    background-color: #d1fae5;
    color: #065f46;
  }

  .status-declined {
    background-color: #fee2e2;
    color: #991b1b;
  }

  .status-completed {
    background-color: #dbeafe;
    color: #1e40af;
  }

  .export-btn {
    background-color: #e67e22;
    color: white;
    border: none;
    padding: 10px 20px;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.3s;
    margin-bottom: 20px;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.3);
  }

  .export-btn:hover {
    background-color: #d35400;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
  }

  .export-btn:active {
    transform: translateY(0);
  }

  .filter-btn {
    padding: 8px 16px;
    border-radius: 8px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    border: 2px solid #e67e22;
    background-color: transparent;
    color: #e67e22;
  }

  .filter-btn.active {
    background-color: #e67e22;
    color: white;
  }

  .filter-btn:hover {
    background-color: #e67e22;
    color: white;
  }

  @media (max-width: 768px) {
    .blue-box {
      padding: 16px;
      border-radius: 12px;
    }

    .bordered-table td, .bordered-table th {
      padding: 12px;
    }
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>

<main class="container mx-auto px-4 py-8 flex-grow">
  <div class="container mx-auto px-4" style="max-width: 1400px;">
    <h1 class="text-4xl font-bold mb-8 text-center text-white">
      üì© Tutor Requests
    </h1>

    <!-- Filter Buttons -->
    <div class="flex flex-wrap gap-3 mb-4 justify-center">
      <button class="filter-btn active" data-filter="all">All</button>
      <button class="filter-btn" data-filter="pending">Pending</button>
      <button class="filter-btn" data-filter="accepted">Accepted</button>
      <button class="filter-btn" data-filter="declined">Declined</button>
      <button class="filter-btn" data-filter="completed">Completed</button>
    </div>

    <div class="flex justify-end mb-4">
      <button id="exportBtn" class="export-btn">
        <span>üì•</span> Export to Text File
      </button>
    </div>

    <div class="blue-box">
      <table id="requestsTable" class="bordered-table">
        <thead>
          <tr>
            <% const headers = ['Tutor Name', 'Tutee Name', 'Subject', 'Class', 'Day (Preferred Date)', 'Status', 'Notes']; %>
            <% headers.forEach((header, index) => { %>
            <th>
              <div class="header-container">
                <span class="header-text" id="headerText<%= index %>"><%= header %></span>
                <div class="icons" style="display: flex; gap: 5px">
                  <span class="sort-icon" id="sortIcon<%= index %>" data-index="<%= index %>">‚Üë‚Üì</span>
                  <span class="search-icon" data-index="<%= index %>">üîç</span>
                </div>
              </div>
              <input
                type="text"
                class="search-input"
                id="searchInput<%= index %>"
                placeholder="Search <%= header %>"
                data-index="<%= index %>"
                style="display: none; width: 100%"
              />
            </th>
            <% }) %>
          </tr>
        </thead>
        <tbody>
          <% if (requests && requests.length > 0) { %>
            <% requests.forEach(request => { %>
            <tr data-status="<%= request.status %>">
              <td><%= request.tutorName || 'Unassigned' %></td>
              <td><%= request.studentFirstName %> <%= request.studentLastName %></td>
              <td><%= request.subject %></td>
              <td><%= request.class %></td>
              <td><%= request.preferredDateFormatted %></td>
              <td>
                <span class="status-badge status-<%= request.status %>"><%= request.status %></span>
              </td>
              <td><%= request.additionalNotes || '‚Äî' %></td>
            </tr>
            <% }) %>
          <% } else { %>
            <tr>
              <td colspan="7" class="text-center text-gray-500 italic py-8">No tutoring requests found.</td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </div>
  </div>
</main>

<script src="/js/adminTutorRequests.js"></script>

<%- include('include/_footer') %> <%- include('include/_end') %>
