{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest"
  },
  "rules": {
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"]
  },
  "globals": {
    "$": true
  },
  "overrides": [
    {
      "files": ["*.ejs"],
      "rules": {
        "no-undef": "off",
        "no-unused-vars": "off"
      }
    }
  ],
  "ignorePatterns": ["**/*.ejs"]
}
